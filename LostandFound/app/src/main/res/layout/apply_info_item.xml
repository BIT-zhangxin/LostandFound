<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_apply_info_object_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_apply_info_nickname"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15sp"
        android:layout_below="@id/tv_apply_info_object_name"/>

    <TextView
        android:id="@+id/tv_apply_info_contact_information"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15sp"
        android:layout_below="@id/tv_apply_info_nickname"/>

</RelativeLayout>