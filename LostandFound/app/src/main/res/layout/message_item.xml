<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_message_object"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/unknown"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_message_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/iv_message_object"/>

    <TextView
        android:id="@+id/tv_message_main_event_type"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15sp"
        android:layout_below="@id/tv_message_name"
        android:layout_toEndOf="@id/iv_message_object"/>

    <TextView
        android:id="@+id/tv_message_location"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15sp"
        android:layout_below="@id/tv_message_main_event_type"
        android:layout_toEndOf="@id/iv_message_object"/>

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15sp"
        android:layout_below="@id/tv_message_location"
        android:layout_toEndOf="@id/iv_message_object"/>

</RelativeLayout>