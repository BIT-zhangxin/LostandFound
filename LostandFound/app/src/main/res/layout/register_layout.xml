            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginTop="@dimen/input_margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin">

                <ImageView
                    android:layout_width="@dimen/imageView"
                    android:layout_height="@dimen/imageView"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/margin_tiny"
                    android:layout_marginLeft="@dimen/margin_tiny"
                    android:src="@drawable/ic_phone_number"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/login_account"/>

                <EditText
                    android:id="@+id/et_register_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editText"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/line"
                    android:layout_marginStart="@dimen/editText_start"
                    android:layout_marginLeft="@dimen/editText_start"
                    android:background="@null"
                    android:hint="@string/register_phone_number_hint"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:digits="@string/valid_character"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_deep"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/editText_start"
                    android:layout_marginLeft="@dimen/editText_start"
                    android:background="@color/style" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginTop="@dimen/input_margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin">

                <ImageView
                    android:layout_width="@dimen/imageView"
                    android:layout_height="@dimen/imageView"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/margin_tiny"
                    android:layout_marginLeft="@dimen/margin_tiny"
                    android:src="@drawable/ic_password"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/login_password"/>

                <EditText
                    android:id="@+id/et_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editText"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/line"
                    android:layout_marginStart="@dimen/editText_start"
                    android:layout_marginLeft="@dimen/editText_start"
                    android:background="@null"
                    android:hint="@string/register_password_hint"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:digits="@string/valid_character"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_deep"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:id="@+id/iv_register_show_password"
                    android:layout_width="@dimen/imageView"
                    android:layout_height="@dimen/imageView"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_password_display"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/login_show_password"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/editText_start"
                    android:layout_marginLeft="@dimen/editText_start"
                    android:background="@color/style" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/input_height"
                android:layout_marginTop="@dimen/input_margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin">

                <ImageView
                    android:layout_width="@dimen/imageView"
                    android:layout_height="@dimen/imageView"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/margin_tiny"
                    android:layout_marginLeft="@dimen/margin_tiny"
                    android:src="@drawable/ic_password"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/login_account"/>

                <EditText
                    android:id="@+id/et_register_password_repetition"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/editText"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/line"
                    android:layout_marginStart="@dimen/editText_start"
                    android:layout_marginLeft="@dimen/editText_start"
                    android:background="@null"
                    android:hint="@string/register_password_repetition_hint"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:digits="@string/valid_character"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_deep"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/editText_start"
                    android:layout_marginLeft="@dimen/editText_start"
                    android:background="@color/style" />

            </RelativeLayout>



            <TextView
                android:id="@+id/tv_register_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <Button
            android:id="@+id/btn_register_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@drawable/button"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:text="@string/login_register"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>